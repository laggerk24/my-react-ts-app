{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "My Vite Extension",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["storage","scripting"],

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "32": "icon32.png"
  }
}